
<%= render partial: '/shared/banner', locals: { title: 'Jobs'} %>

<%= render "contractors/subnav" %>

<div class="section-page-landing section-grey">
  <div class="inner-section">

    <div class="container">
    	<div class="row product-row">
    		<div class="col-xs-12">
    			<div class="jobs page-section">
	    			<header class="blue-header">
				    	<h2><%= @title.capitalize %> Jobs</h2>
				    </header>

			      <div class="job-list-items section-body">
				      <% if @jobs.length > 0 %>
				      	<%= render partial: "job_list_item", collection: @jobs, locals: { half: false } %>
				      <% else %>
				      	<h3>
				      		No <%= @title %> jobs to show.
				      	</h3>
				      <% end %>
				    </div>
		    	</div>
		    </div> <!-- .col-xs-12 -->
	    </div>
	  </div> <!-- .container -->
  </div> <!-- .inner-section -->
</div> <!-- .section-page-landing -->
