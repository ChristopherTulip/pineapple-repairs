

<div class="section-page-landing section-grey">
  <div class="inner-section">
    <div class="container">
      <% @job.steps.each_with_index do |step, i| %>
        <% if step == @job.current_step %>
          <div class="col-sm-2">
            <h4>
              <span>
                <%= "#{i+1}. #{step}" %>
                <i class="fa fa-caret-right"></i>
              </span>
            </h4>
          </div>
        <% else %>
          <div class="col-sm-2">
            <h4>
              <%= "#{i+1}. #{step}" %>
              <i class="fa fa-caret-right"></i>
            </h4>
          </div>
        <% end %>
      <% end %>

      <%= form_for Job.new do |f| %>
        <%= render "/jobs/#{@job.current_step}_step", f: f, job: @job %>

        <% unless @job.first_step? %>
          <div><%= f.button :back, name: "back", value: "true" %></div>
          <div><%= f.button :restart, name: "restart", value: "true" %></div>
        <% end %>

      <% end %>
    </div>
  </div>
</div>

