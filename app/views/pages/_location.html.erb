<!-- SECTION SERVICES -->
<div class="section-page-landing section-location section-blue" id="location">

    <div class="container">

      <%= form_for Job.new, html: { class: "autocomplete-form" } do |f| %>

        <p>Repair My Device!</p>
        <div>
          <%= text_field_tag "", nil, class: 'autocomplete' %>

          <%= f.fields_for :location do |location| %>
            <%= location.hidden_field :city,  class: 'city-field' %>
            <%= location.hidden_field :country, class: 'country-field' %>
          <% end %>

          <%= f.submit "Request A Quote", class: "btn btn-primary btn-autocomplete" %>

          <%= hidden_field_tag "restart", "true" %>
        </div>
      <% end %>
    </div>

</div>
<!-- END SECTION SERVICES -->

<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>
