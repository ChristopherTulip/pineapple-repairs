<div class="section-page-landing section-grey">
	<div class="inner-section">
		<div class="container">
			<h2>Your Jobs</h2>
		</div>

		<div class="row">
			<div class="col-md-4">
				<%= image_tag("contractor.jpg") %>


				<h3>Account Info</h3>
				<ul>
					<li>
						Name: <%= current_contractor.name %>
					</li>
					<li>
						Email: <%= current_contractor.email %>
					</li>
				</ul>
			</div>
			<div class="col-md-8">
				<div class="jobs-finished">
					<h3>Finished Jobs</h3>

					<ul>
						<% @jobs_finished.each do |job| %>
						<li class="job-finished">
							<ul>
								<li>City: <%= job.location.city.capitalize %></li>
								<li>Country: <%= job.location.country.capitalize %>
								</li>
								<li>Email: <%= job.email %></li>

								<li>Phone: <%= job.phone_number %></li>
								<li>Problem: <%= job.problem.name %></li>
								<li>Device: <%= job.device.name %></li>
								<li>Model: <%= job.model.name %></li>
								<li>Network: <%= job.network.name %></li>
								<li>Date Completed: </li>
								<li>Date Created: <%= job.created_at %></li>

							</ul>
							<%= form_tag '/contractor/#{current_contractor.id}/jobs', class: 'form validate', html: {role: 'form'} do %>
								<div class="form-group">
									<%= submit_tag 'Take Job', class: 'btn btn-primary inputbtn transition' %>
								</div>
							<% end %> 
						</li>
						<% end %>
					</ul>
				</div>
				<div class="jobs-current">
					<h3>Current Jobs</h3>

					<ul>
						<% @jobs_current.each do |job| %>
							<li class="job-current">
								<ul>
									<li>City: <%= job.location.city.capitalize %></li>
									<li>Country: <%= job.location.country.capitalize %>
									</li>
									<li>Email: <%= job.email %></li>

									<li>Phone: <%= job.phone_number %></li>
									<li>Problem: <%= job.problem.name %></li>
									<li>Device: <%= job.device.name %></li>
									<li>Model: <%= job.model.name %></li>
									<li>Network: <%= job.network.name %></li>
									<!-- <li>Date Completed: </li> -->
									<li>Date Created: <%= job.created_at %></li>

								</ul>
							</li>
						<% end %>
					</ul>
				</div>
				<div class="jobs-available">
					<h3>Available Jobs</h3>

					<ul>
						<% @jobs_available.each do |job| %>
							<li class="job-available">
							<ul>
								<li>City: <%= job.location.city.capitalize %></li>
								<li>Country: <%= job.location.country.capitalize %>
								</li>
								<li>Email: <%= job.email %></li>

								<li>Phone: <%= job.phone_number %></li>
								<li>Problem: <%= job.problem.name %></li>
								<li>Device: <%= job.device.name %></li>
								<li>Model: <%= job.model.name %></li>
								<li>Network: <%= job.network.name %></li>
								<!-- <li>Date Completed: </li> -->
								<li>Date Created: <%= job.created_at %></li>

							</ul>
						</li>
						<% end %>
					</ul>
				</div>

			</div>
		</div>
	</div>
</div>