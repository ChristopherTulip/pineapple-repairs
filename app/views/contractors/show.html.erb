<div class="section-page-landing section-grey">
	<div class="inner-section">
		<div class="container">
			<h2>Your Jobs</h2>
		</div>

		<div class="row">
			<div class="col-md-4">
				<%= image_tag("contractor.jpg") %>

				<h3>Account Info</h3>
				<ul>
					<li>
						Name: <%= current_contractor.name %>
					</li>
					<li>
						Email: <%= current_contractor.email %>
					</li>
				</ul>
			</div>
			<div class="col-md-8">

				<div class="jobs-finished">
					<h3>Finished Jobs</h3>
					<%= render partial: "job_list_item", collection: @jobs_finished %>
				</div>

				<div class="jobs-current">
					<h3>Current Jobs</h3>
					<%= render partial: "job_list_item", collection: @jobs_current %>
				</div>

				<div class="jobs-available">
					<h3>Available Jobs</h3>
					<%= render partial: "job_list_item", collection: @jobs_available %>
				</div>

			</div>
		</div>
	</div>
</div>
