
<div class="body-content">
	<%= render partial: '/shared/banner', locals: { title: 'Products'} %>
	
	<nav class="sub-nav">
		<div class="row text-center">
			<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 col-xs-offset-0">
				<ul class="list-inline">
					<% @devices.each do |device| %>
						<li>
							<a href="#<%= device.name.downcase %>"><%= device.name %></a>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>
  <div class="section-page-landing section-grey">
    <div class="inner-section">
      <div class="container">
      	
      	
        <%= render @devices %>
      </div>
    </div>
  </div>
</div>
