
<div class="body-content">
	<%= render partial: '/shared/banner', locals: { title: 'Repairs'} %>

	<nav class="sub-nav">
		<div class="row text-center">
			<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 col-xs-offset-0">
				<ul class="list-inline">
					<% @devices.each do |device| %>
						<li>
							<a href="#<%= device.name.downcase %>"><%= device.name %></a>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>

  <div class="section-page-landing section-grey">
  	<div class="inner-section repairs-services">
	    <div class="container">
	      <h2 class="text-center">Our Services</h2>
	      <p class="text-center">
	        Whether you've dropped, drenched, or otherwise broken your phone we can fix it. Here at Pineapple Repair we deal with all major repair types as seen below! It's roughly the same price for all types of fix but give us a call and we'll be happy to give you a more detailed quote.
	      </p>

	      <div class="hi-icon-effect-1 hi-icon-effect-1a">
	        <div class="row services">
	          <div class="col-sm-3 service">
	            <div class="the-box-landing the-box-transparent text-center">
	              <%= image_tag "cracked_screen.png" %>
	              <h4>Cracked Screens &amp; Water Damage</h4>
	            </div>
	          </div>
	          <div class="col-sm-3 service">
	            <div class="the-box-landing the-box-transparent text-center">
	              <%= image_tag "dead_battery.png" %>
	              <h4>Dead Battery</h4>
	            </div>
	          </div>
	          <div class="col-sm-3 service">
	            <div class="the-box-landing the-box-transparent text-center">
	              <%= image_tag "speaker.png" %>
	              <h4>Sound Issues</h4>
	            </div>
	          </div>
	          <div class="col-sm-3 service">
	            <div class="the-box-landing the-box-transparent text-center">
	              <%= image_tag "broken_buttons.png" %>
	              <h4>Broken Buttons/Jacks</h4>
	            </div>
	          </div>
	        </div>
	      </div>


	 			
        <%= render @devices %>
      </div>
    </div>
  </div>
</div>
