
<h2>Sign up</h2>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: "normal-form"} do |f| %>
  <%= devise_error_messages! %>

  <div class="form-row">
	  <%= f.text_field :name, autofocus: true, placeholder:"Name" %>
	</div>

  <div class="form-row">
	  <%= f.email_field :email, autofocus: true, placeholder:"Email Address" %>
	</div>

  <div class="form-row">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
  </div>

  

  <div class="button-row">
  	<%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>